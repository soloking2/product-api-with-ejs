<%- include('../includes/head.ejs')%>
</head>
<body>
    <%- include('../includes/navigation.ejs')%>
    <main>
        <% if(prod.length > 0 ) {%>
                <div class="grid">
                    <% for(let product of prod) {%>
                            <article class="card-product-item">
                                <header class="card-header">
                                    <h1 class="product-title"><%= product.title %></h1>
                                </header>
                                <div class="card-image">
                                    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                                </div>
                                <div class="card-content">
                                    <h2 class="product-price"> $<%= product.price %></h2>
                                    <p class="product-descript card-actions"><%= product.description %></p>
                                </div>
                                <a href="/admin/products/<%= product._id%>?edit=true" class="btn" type="button">Edit</a>
                                    <form action="/admin/delete-product" method="post">
                                        <button class="btn" type="submit">Delete</button>
                                        <input type="hidden" value="<%= product._id%>" name="deleteId">
                                    </form>
                            </article>
                            <% }%>
                        </div>
            <%} else {%>
                <h1>No product</h1>
            <% }%>
    </main>
</body>
</html>